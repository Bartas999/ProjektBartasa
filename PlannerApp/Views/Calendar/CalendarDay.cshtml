@model List<PlannerApp.Models.TaskListModel>

@{
    <div class="modal fade" id="dayModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body dayBody">
                    @foreach (var task in Model)
                    {
                    <div class="timeStamp">

                        <div class="card border-primary mb-3">
                            <div class="card-header fas fa-volleyball-ball fa-2x" typeof="button" data-toggle="collapse" href="#task_@task.ID">
                                <p>Due date: @task.DueDate.TimeOfDay</p>
                            </div>
                            <div class="card-body text-primary collapse" id="task_@task.ID">
                                <h5 class="card-title">@task.Priority</h5>
                                <p class="card-text">@task.Description</p>
                                <a href="/TaskList/Edit/@task.ID" class="btn btn-primary">Edit</a>
                            </div>
                        </div>
                    </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}
